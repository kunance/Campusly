{
    "rules": {
        ".read": false,
        ".write": false,
        "syncedValue": {
            ".read": true,
            ".write": true,
            ".validate": "newData.isString() && newData.val().length <= 100"
        },
        "users": {
            "$user": {
                ".read": "auth.uid === $user",
                ".write": "auth.uid === $user && (!newData.exists() || newData.hasChildren())"
            }
        },     
        "references":{
            "$reference" : {
              ".read" : true,
              ".write" : true
            }
        },
        "featured": {
               ".read": true,
               ".write": false
        },
        "properties": {
               ".read":true,
               "$property":{
                   ".read":true,
                   ".write":true
               }
        },
        "bids" : {
            ".read": true,
            "$bid": {
                ".read": true,
                ".write" : true
            }
        },
        "watchlist":{
            "$user" : {
              ".read" : true,
              ".write" : true,
              "$property": {
                  ".read" : true,
                  ".write" : true
              }
            }
        }
    }
}
