{
    "rules": {
        ".read": false,
        ".write": false,
        "syncedValue": {
            ".read": true,
            ".write": true,
            ".validate": "newData.isString() && newData.val().length <= 100"
        },
        "users": {
            "$user": {
                ".read": "auth.uid === $user",
                ".write": "auth.uid === $user && (!newData.exists() || newData.hasChildren())",                
                "email": {
                    ".validate": "newData.isString() && newData.val().length <= 150"
                },
                "name": {
                    ".validate": "newData.isString() && newData.val().length <= 40"
                },
                "firstName": {
                    ".validate": "newData.isString() && newData.val().length <= 40"
                },
                "lastName": {
                    ".validate": "newData.isString() && newData.val().length <= 40"
                },
                "phone": {
                    ".validate": "newData.isString() && newData.val().length <= 20"
                },
                "street": {
                    ".validate": "newData.isString() && newData.val().length <= 150"
                },
                "city": {
                    ".validate": "newData.isString() && newData.val().length <= 100"
                },
                "state": {
                    ".validate": "newData.isString() && newData.val().length <= 20"
                },
                "zip": {
                    ".validate": "newData.isString() && newData.val().length <= 10"
                },
                "creditScore": {
                    ".validate": "newData.isString() && newData.val().length <= 20"
                },
                "occupants": {
                    ".validate": "newData.isNumber() && newData.val() <= 999"
                },
                "properties" : {
                    ".validate" : true
                },
                "income" : {
                    ".validate" : true
                },
                "pets" : {
                    ".validate" : true
                },
                "$other": {
                    ".validate": false
                }
            }
        },     
        "references":{
            "$reference" : {
              ".read" : true,
              ".write" : true
            }
        },
        "properties": {
               ".read":true,
               "$property":{
                   ".read":true,
                   ".write":true,
                   "bids" : {
                     ".validate" : true
                   },
                   "$other": {
                    ".validate": "(auth.email == 'mail@riteshdalal.com' || auth.email == 'modivinit@gmail.com')"
                  }
               }
        },
        "bids" : {
            ".read": true,
            "$bid": {
                ".read": true,
                ".write" : true
            },
            "user":{
                ".validate" : "newData.isString() && newData.val() == auth.uid"
            }
        }
    }
}